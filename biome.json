{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
	  "enabled": false,
	  "clientKind": "git",
	  "useIgnoreFile": false
	},
	"files": {
	  "ignoreUnknown": false,
	  "ignore": ["tsconfig.node.json", "tsconfig.json", "tsconfig.app.json"]
	},
	"formatter": {
	  "enabled": true,
	  "indentStyle": "space",
      "indentWidth": 4
	},
	"organizeImports": {
	  "enabled": true
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"recommended": true,
		"a11y": {
		  "useValidAnchor": "off"
		}
	  }
	},
	"javascript": {
	  "formatter": {
		"quoteStyle": "double",
		"lineWidth": 120
	  }
	}
  }
